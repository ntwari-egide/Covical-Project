{
  "env": {
    "browser": true,
    "es2015": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "indent": ["error", 4],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-empty": "warn",
    "no-cond-assign": ["error", "always"]
  }
}